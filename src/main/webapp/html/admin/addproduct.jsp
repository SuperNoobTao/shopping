<script>
    var imagechanged=false;
    function change(file,ele){
        imagechanged=true;
        var img = document.getElementById(ele);

        var reader = new FileReader();
        reader.onload = function(evt){
            img.src = evt.target.result;

        }
        reader.readAsDataURL(file.files[0]);
    }


</script>
